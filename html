  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      background: linear-gradient(to bottom, #FFEDFB, #EFA3E1);
      font-family: 'Cherry Bomb One', cursive;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
      position: relative;
    }

    #starshine {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      overflow: hidden;
      pointer-events: none;
    }

    .shine {
      position: absolute;
      background-image: url("data:image/svg+xml,%3Csvg fill='white' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24'%3E%3Cpath d='M12 2l1.06 4.47L17 7l-3.47 2.53L14 14l-2-2-2 2 1.47-4.47L7 7l3.94-.53L12 2z'/%3E%3C/svg%3E");
      background-repeat: no-repeat;
      background-size: contain;
      opacity: 0;
      animation: glitter 6s linear infinite;
    }

    .shine.small { width: 20px; height: 20px; }
    .shine.medium { width: 30px; height: 30px; }
    .shine.large { width: 50px; height: 50px; }

    @keyframes glitter {
      0% { transform: scale(0.3) rotate(0deg); opacity: 0; }
      25% { transform: scale(1) rotate(360deg); opacity: 1; }
      50% { transform: scale(0.3) rotate(720deg); opacity: 0; }
      100% { transform: scale(0.3) rotate(0deg); opacity: 0; }
    }

    .player {
      background: #FFE9F2;
